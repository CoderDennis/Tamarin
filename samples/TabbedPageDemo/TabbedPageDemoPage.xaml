<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
<StackLayout Padding="5, 25">

  <!-- Name -->
  <Label x:Name = "Name"
         Font="Bold,Large"
         HorizontalOptions="Center" />

  <!-- Picture -->
  <Image x:Name = "Picture"
         WidthRequest="200" 
         HeightRequest="200" />

  <StackLayout Padding="50, 10">

    <!-- Family -->
    <StackLayout Orientation="Horizontal">
      <Label  Text="Family:"
             HorizontalOptions="FillAndExpand" />
      <Label x:Name = "Family" 
             Font="Bold,Medium" />
    </StackLayout>

    <!-- Subfamily -->
    <StackLayout Orientation="Horizontal" x:Name = "SubfamilySection">
      <Label Text="Subfamily:"
             HorizontalOptions="FillAndExpand" />
      <Label x:Name = "Subfamily"
             Font="Bold,Medium" />
    </StackLayout>

    <!-- Tribe -->
    <StackLayout Orientation="Horizontal" x:Name = "TribeSection">
      <Label Text="Tribe:"
              HorizontalOptions="FillAndExpand" />
      <Label x:Name = "Tribe"
             Font="Bold,Medium" />
    </StackLayout>

    <!-- Genus -->
    <StackLayout Orientation="Horizontal">
      <Label Text="Genus:"
             HorizontalOptions="FillAndExpand" />
      <Label x:Name = "Genus"
             Font="Bold,Medium" />
    </StackLayout>
  </StackLayout>
</StackLayout>
</ContentPage>
